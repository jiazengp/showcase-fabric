{
	"schemaVersion": 1,
	"id": "showcase",
	"version": "${version}",
	"name": "Showcase",
	"description": "A server-side Minecraft mod that allows players to share links in chat to showcase items, inventories, containers, villager trades, and statistics through commands or chat keywords.",
	"authors": [
		"Hyouka233"
	],
	"contact": {
		"homepage": "https://www.mcmod.cn/class/20596.html",
		"sources": "https://github.com/jiazengp/showcase-fabric/",
		"issues": "https://github.com/jiazengp/showcase-fabric/issues/"
	},
	"license": "MIT",
	"icon": "assets/showcase/icon.png",
	"environment": "server",
	"entrypoints": {
		"main": [
			"com.showcase.ShowcaseMod"
		]
	},
	"mixins": [
		"showcase.mixins.json"
	],
	"depends": {
		"fabricloader": ">=${fabric_loader_version}",
		"minecraft": ">=${minecraft_version}",
		"sgui": ">=${sgui_api_version}",
		"java": ">=${java_version}"
	},
	"suggests": {
		"luckperms": "*"
	}
}
