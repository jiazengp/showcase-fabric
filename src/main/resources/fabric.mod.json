{
	"schemaVersion": 1,
	"id": "showcase",
	"version": "${version}",
	"name": "Showcase",
	"description": "Allows players to easily showcase their various items, any container, or even villager trades to others via clickable share links and a read-only GUI.",
	"authors": [
		"Hyouka233"
	],
	"contact": {
		"homepage": "https://modrinth.com/project/showcase",
		"sources": "https://github.com/jiazengp/showcase-fabric/"
	},
	"license": "MIT",
	"icon": "assets/showcase/icon.png",
	"environment": "server",
	"entrypoints": {
		"main": [
			"com.showcase.ShowcaseMod"
		]
	},
	"mixins": [
		"showcase.mixins.json"
	],
	"depends": {
		"fabricloader": ">=${fabric_loader_version}",
		"minecraft": ">=${minecraft_version}",
		"sgui": ">=${sgui_api_version}",
		"java": ">=${java_version}"
	},
	"suggests": {
		"luckperms": "*"
	}
}